programa {
	funcao inicio() {
		real Mnumero1, Mnumero2, Msoma, Msubtracao, Mmultiplicacao, Mdivisao
		
		Mnumero1 = 0.0 
		Mnumero2 = 0.0 
		Msoma = 0.0 
		Msubtracao = 0.0 
		Mmultiplicacao = 0.0
		Mdivisao = 0.0
		
		escreva ("Insira o primeiro número: ")
		leia (Mnumero1)
		
		escreva ("Insira o segundo numero: ")
		leia (Mnumero2)
		
		Msoma = Mnumero1 + Mnumero2
		Msubtracao = Mnumero1 - Mnumero2
		Mmultiplicacao = Mnumero1 * Mnumero2
		Mdivisao = Mnumero1 / Mnumero2
		
		escreva ("\nA soma dos dois numeros é: ", Msoma)
		escreva ("\nA subtração dos dois numeros é: ", Msubtracao)
		escreva ("\nA multiplicação dos dois numeros é: ", Mmultiplicacao)
		escreva ("\nA divisão dos dois numeros é: ", Mdivisao)
		
	}
}
